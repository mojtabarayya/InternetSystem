<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="controllers.AddSubscriberController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10"
          style="-fx-padding: 20; -fx-background-color: #f8f8f8;">

    <Label text="الاسم الكامل:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="رقم الهاتف:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="العنوان:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="الباقة:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="packageComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="إضافة" onAction="#handleAddSubscriber"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
            GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>