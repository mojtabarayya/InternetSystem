<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.SubscriberListController"
      style="-fx-padding: 20; -fx-background-color: #ffffff;">

    <HBox spacing="10">
        <Label text="بحث بالاسم:"/>
        <TextField fx:id="searchField" promptText="أدخل اسم المشترك..."/>
        <Button text="بحث" onAction="#handleSearch"/>
    </HBox>

    <TableView fx:id="subscriberTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="nameCol" text="الاسم"/>
            <TableColumn fx:id="phoneCol" text="الهاتف"/>
            <TableColumn fx:id="packageCol" text="الباقة"/>
            <TableColumn fx:id="statusCol" text="الحالة"/>
        </columns>
    </TableView>
</VBox>