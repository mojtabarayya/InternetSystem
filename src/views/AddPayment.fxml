<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="controllers.AddPaymentController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="15"
          style="-fx-padding: 30;"
>

    <!-- Title -->
    <Label text="تسجيل دفعة جديدة"
           GridPane.columnSpan="2"
           GridPane.rowIndex="0"
           GridPane.halignment="CENTER"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <!-- Subscription ID -->
    <Label text="رقم الاشتراك:" GridPane.rowIndex="1" GridPane.columnIndex="0"
           style="-fx-font-weight: bold;"/>
    <TextField fx:id="subscriptionIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"
               promptText="أدخل رقم الاشتراك"/>

    <!-- Amount -->
    <Label text="المبلغ المدفوع:" GridPane.rowIndex="2" GridPane.columnIndex="0"
           style="-fx-font-weight: bold;"/>
    <TextField fx:id="amountField" GridPane.rowIndex="2" GridPane.columnIndex="1"
               promptText="أدخل المبلغ"/>

    <!-- Payment Date -->
    <Label text="تاريخ الدفع:" GridPane.rowIndex="3" GridPane.columnIndex="0"
           style="-fx-font-weight: bold;"/>
    <DatePicker fx:id="paymentDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Submit Button -->
    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button text="تسجيل الدفع" onAction="#handleAddPayment"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

</GridPane>
