<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.MainLayoutController"
            style="-fx-background-color: #f4f6f9;">

    <!-- 🧭 Left Side Menu -->
    <left>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #2c3e50;"
              prefWidth="180">
            <Label text="القائمة" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Button text="لوحة التحكم" onAction="#goToDashboard" maxWidth="Infinity"
                    styleClass="menu-button"/>
            <Button text="المشتركين" onAction="#goToSubscribers" maxWidth="Infinity"
                    styleClass="menu-button"/>
            <Button text="الاشتراكات" onAction="#goToSubscriptions" maxWidth="Infinity"
                    styleClass="menu-button"/>
            <Button text="الدفعات" onAction="#goToPayments" maxWidth="Infinity"
                    styleClass="menu-button"/>
            <Button text="الإحصائيات" onAction="#goToStatistics" maxWidth="Infinity"
                    styleClass="menu-button"/>
        </VBox>
    </left>

    <!-- 🧱 Top Header -->
    <top>
        <HBox style="-fx-background-color: #ffffff; -fx-padding: 15 20 15 20; -fx-border-color: #dcdcdc; -fx-border-width: 0 0 1 0;">
            <Label text="نظام إدارة الاشتراكات"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </HBox>
    </top>

    <!-- 📄 Dynamic Content -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;"/>
    </center>
</BorderPane>
